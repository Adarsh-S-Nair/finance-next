{
  "buildCommand": "npm run build",
  "framework": "nextjs",
  "installCommand": "npm install",
  "github": {
    "enabled": true,
    "silent": false,
    "autoJobCancelation": true
  },
  "crons": [
    {
      "path": "/api/market-data/sync-constituents",
      "schedule": "0 2 * * 1"
    },
    {
      "path": "/api/cron/portfolio-snapshots",
      "schedule": "30 14 * * *"
    },
    {
      "path": "/api/cron/prune-crypto-candles",
      "schedule": "0 2 * * *"
    }
  ]
}